<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuButton">
        <attr name="menuIcon" format="reference" />
        <attr name="menuName" format="string" />
        <attr name="menuNameSize" format="dimension" />
        <attr name="menuNameColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="KVTextView">
        <attr name="title" format="string" />
        <attr name="content" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="contentColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="contentSize" format="dimension" />
        <attr name="isVertical" format="boolean" />
        <attr name="isShowDividerLine" format="boolean" />
        <attr name="canEdit" format="boolean" />
        <attr name="contentHint" format="string" />
    </declare-styleable>

</resources>